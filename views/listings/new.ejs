<% layout("/layouts/boilerplate") %>

<h3 class="mb-4">Create a New Listing</h3>

<form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
  
  <!-- Title -->
  <div class="mb-3">
    <label for="listing-title" class="form-label">Title</label>
    <input 
      id="listing-title" 
      name="listing[title]" 
      type="text" 
      class="form-control" 
      placeholder="Enter title" 
      required
      minlength="3"
    >
    <div class="valid-feedback">✅ Title looks good!</div>
    <div class="invalid-feedback">⚠️ Please provide a valid title (at least 3 characters).</div>
  </div>

  <!-- Description -->
  <div class="mb-3">
    <label for="listing-description" class="form-label">Description</label>
    <textarea 
      id="listing-description" 
      name="listing[description]" 
      class="form-control" 
      placeholder="Enter description" 
      rows="3" 
      required
      minlength="10"
    ></textarea>
    <div class="valid-feedback">✅ Description looks detailed!</div>
    <div class="invalid-feedback">⚠️ Please enter at least 10 characters for the description.</div>
  </div>

  <!-- Image URL -->
  
  <div class="mb-3">
    <label for="listing-image" class="form-label">Upload Image</label>
    <input 
      id="listing-image" 
      name="image" 
      type="file" 
      class="form-control" 
      placeholder="Upload image "
      pattern="https?://.+"
    >
    <div class="valid-feedback">✅ Image looks valid!</div>
    <div class="invalid-feedback">⚠️ Please add a valid image</div>
  </div>

  <!-- Price -->
  <div class="mb-3">
    <label for="listing-price" class="form-label">Price</label>
    <input 
      id="listing-price" 
      name="listing[price]" 
      type="number" 
      class="form-control" 
      placeholder="Enter price" 
      required 
      min="1"
    >
    <div class="valid-feedback">✅ Price looks valid!</div>
    <div class="invalid-feedback">⚠️ Please enter a valid number greater than 0.</div>
  </div>

  <!-- Country -->
  <div class="mb-3">
    <label for="listing-country" class="form-label">Country</label>
    <input 
      id="listing-country" 
      name="listing[country]" 
      type="text" 
      class="form-control" 
      placeholder="Enter country" 
      required
    >
    <div class="valid-feedback">✅ Country looks good!</div>
    <div class="invalid-feedback">⚠️ Please enter a valid country name.</div>
  </div>

  <!-- Location -->
  <div class="mb-3">
    <label for="listing-location" class="form-label">Location</label>
    <input 
      id="listing-location" 
      name="listing[location]" 
      type="text" 
      class="form-control" 
      placeholder="Enter location" 
      required
    >
    <div class="valid-feedback">✅ Location looks valid!</div>
    <div class="invalid-feedback">⚠️ Please provide a valid location.</div>
  </div>

  <button type="submit" class="btn btn-primary">Add</button>
  <br/><br/>
</form>

<!-- Bootstrap client-side validation script -->
<script>
  // Activate Bootstrap validation styles
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>
